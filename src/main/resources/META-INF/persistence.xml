<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="openstats" transaction-type="RESOURCE_LOCAL">
		<class>openstats.model.Assembly</class>
		<class>openstats.model.District</class>
		<class>openstats.model.Districts</class>
		<class>openstats.model.Legislator</class>
		<class>openstats.model.GroupInfo</class>
		<properties>
			<!-- Properties for Hibernate -->
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.show_sql" value="false" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/openstats" />
			<property name="javax.persistence.jdbc.user" value="openstats" />
			<property name="javax.persistence.jdbc.password" value="openstats" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
		</properties>
	</persistence-unit>
</persistence>
